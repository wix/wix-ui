{
  "compilerOptions": {
    "sourceMap": true,
    "importHelpers": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "strictNullChecks": false,
    "skipLibCheck": true,
    "target": "es5",
    "jsx": "react",
    "lib": [
      "dom",
      "es2016"
    ],
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "esModuleInterop": true
  },
  "include": [
    "./src/*.d.ts",
    "./src/**/*.ts",
    "./src/**/*.js",
    "./src/**/*.tsx"
  ]
}
