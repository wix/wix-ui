{
  "compilerOptions": {
    "sourceMap": true,
    "importHelpers": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "strictNullChecks": false,
    "target": "ES5",
    "jsx": "react",
    "lib": ["dom", "es2016"],
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": false,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "incremental": true,
    "rootDir": "src",
    "outDir": "dist/esm",
    "declarationDir": "dist/types",
    "declaration": true,
    "resolveJsonModule": true
  },
  "include": [
    "./src/*.d.ts",
    "./src/**/*.ts",
    "./src/**/*.js",
    "./src/**/*.tsx"
  ],
  "exclude": [
    "./src/**/*.spec.ts",
    "./src/**/*.spec.js",
    "./src/**/*.spec.tsx",
    "./src/**/*.test.ts",
    "./src/**/*.test.js",
    "./src/**/*.test.tsx"
  ]
}
