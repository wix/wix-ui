{
  "extends": [
    "tslint-config-yoshi"
  ],
  "linterOptions": {
    "exclude": [
      "*.json",
      "**/*.json"
    ]
  },
  "rules": {
    "comma-dangle": [
      "error",
      "never"
    ],
    "jsx-no-multiline-js": false,
    "jsx-no-lambda": false,
    "jsx-boolean-value": [
      true,
      "never"
    ],
    "jsx-alignment": true,
    "jsx-wrap-multiline": true,
    "space-in-brackets": [
      "error",
      "always"
    ],
    "array-bracket-spacing": [
      true,
      "never"
    ],
    "quotemark": [
      true,
      "single",
      "jsx-double"
    ],
    "no-shadowed-variable": false
  }
}
