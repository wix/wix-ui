{
  "compilerOptions": {
    "sourceMap": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es2016"
    ],
    "outDir": "dist",
    "rootDir": "./src",
    "declaration": true,
    "esModuleInterop": true
  },
  "typeRoots": [
    "node_modules/@types"
  ],
  "include": [
    "./src/**/*.ts",
    "./src/**/*.js"
  ],
  "exclude": [
    "./src/**/__testfixtures__",
    "./src/**/__test__",
    "./package.json",
    "src/**/*.spec.*"
  ]
}
