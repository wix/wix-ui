{
  "compilerOptions": {
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": false,
    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    "types": ["node", "jest"],
    "lib": ["dom", "esnext"],
    "resolveJsonModule": true
  },
  "files": [
    "./src/globals.d.ts",
    "./node_modules/@wix/yoshi/types.d.ts",
    "./node_modules/jest-yoshi-preset/types.d.ts"
  ],
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    // Used for sharing story with external Storybooks (e.g. wix-style-react)
    "./stories/general/GeneralCategoryList.tsx",
    "./stories/classic-editor/general/classicEditorGeneralCategoryList.tsx",
    "stories/on-stage/general/OnStageGeneralCategoryList.tsx",
    "./stories/APITable.tsx"
  ]
}
