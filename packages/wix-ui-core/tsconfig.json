{
  "compilerOptions": {
    "baseUrl": ".",
    "sourceMap": true,
    "declaration": true,
    "importHelpers": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "target": "es5",
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "resolveJsonModule": true,
    "paths": {
      "protractor": ["src/protractor.d.ts"] // Fix protractor issue https://github.com/angular/protractor/issues/5348
    }
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./src/types/external-types.d.ts"
  ]
}
