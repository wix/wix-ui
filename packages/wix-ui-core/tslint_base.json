{
  "extends": [
    "tslint-config-yoshi"
  ],
  "rules": {
    "prefer-object-spread": false,
    "comma-dangle": [
      "error",
      "never"
    ],
    "jsx-no-multiline-js": false,
    "jsx-no-lambda": false,
    "jsx-boolean-value": [
      true,
      "never"
    ],
    "jsx-alignment": true,
    "jsx-wrap-multilines": [
      "error",
      { "declaration": false, "assignment": false }
    ],
    "space-in-brackets": [
      "error",
      "always"
    ],
    "arrow-parens": [
      true,
      "ban-single-arg-parens"
    ],
    "array-bracket-spacing": [
      true,
      "never"
    ],
    "quotemark": [
      true,
      "single",
      "jsx-double"
    ],
    "no-floating-promises": {
      "severity": "warn"
    },
    "restrict-plus-operands": {
      "severity": "warn"
    }
  }
}
